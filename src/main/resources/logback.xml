<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
    </encoder>
  </appender>

  <!-- http://logback.qos.ch/manual/architecture.html#basic_selection -->
  <logger name="at.tugraz.iaik.cryptoslice.application" level="info" />
  <logger name="at.tugraz.iaik.cryptoslice.analysis.slicing.TodoList" level="info" />
  <logger name="at.tugraz.iaik.cryptoslice.analysis.slicing.SliceNode" level="info" />
  <logger name="at.tugraz.iaik.cryptoslice.analysis.slicing.SliceTree" level="info" />
  <logger name="at.tugraz.iaik.cryptoslice.analysis.slicing" level="info" />
  <logger name="at.tugraz.iaik.cryptoslice.analysis.slicinganalysis" level="debug" />

  <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>